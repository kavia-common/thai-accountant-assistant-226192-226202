{
    "name": "minimal-express-app",
    "version": "1.0.0",
    "description": "Minimal Express app with scalable structure",
    "main": "src/server.js",
    "scripts": {
        "start": "node src/server.js",
        "dev": "nodemon src/server.js",
        "test": "jest",
        "lint": "eslint ."
    },
    "dependencies": {
        "cors": "2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "multer": "^2.0.2",
        "mysql2": "^3.16.0",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "uuid": "^13.0.0",
        "zod": "^4.2.1"
    },
    "devDependencies": {
        "eslint": "^9.24.0",
        "globals": "^16.0.0",
        "jest": "^29.7.0",
        "nodemon": "^3.0.1"
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ignore": [
            "node_modules",
            "package.json",
            "package-lock.json",
            "*.lock",
            "*.log",
            "*.md",
            ".git",
            "dist",
            "build"
        ],
        "ext": "js,json"
    }
}
